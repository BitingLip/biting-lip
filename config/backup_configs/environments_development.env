# Development Environment Configuration
# This file contains development-specific overrides

# Development Mode Settings
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# Development Database Settings (if different from production)
# REDIS_URL=redis://localhost:6379/1  # Use different DB for dev

# Development External Services (mock/test endpoints)
# EXTERNAL_API_BASE_URL=https://api-dev.example.com

# Development Resource Limits
MAX_CONCURRENT_TASKS=5
REQUEST_TIMEOUT=30

# Development Security (relaxed for testing)
CORS_ALLOW_ALL=true
AUTH_STRICT_MODE=false

# Development Monitoring
ENABLE_METRICS=true
METRICS_DETAILED=true
