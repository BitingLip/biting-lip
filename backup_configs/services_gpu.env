# GPU and Compute Configuration
# GPU, CUDA, and compute-related settings

# GPU Detection and Management
GPU_ENABLED=true
CUDA_VISIBLE_DEVICES=all
GPU_MEMORY_FRACTION=0.9
GPU_ALLOW_GROWTH=true

# CUDA Settings
CUDA_VERSION=12.1
CUDNN_VERSION=8.9
TORCH_CUDA_ARCH_LIST=7.0;7.5;8.0;8.6

# Compute Settings
MAX_CONCURRENT_MODELS=4
MODEL_LOAD_TIMEOUT=300
MODEL_UNLOAD_TIMEOUT=60
MEMORY_CLEANUP_INTERVAL=600

# Worker Pool Settings
MIN_WORKERS=1
MAX_WORKERS=8
WORKER_SPAWN_STRATEGY=on_demand
WORKER_IDLE_TIMEOUT=900

# Model Optimization
MIXED_PRECISION_ENABLED=true
TORCH_COMPILE_ENABLED=false
TENSORRT_ENABLED=false
QUANTIZATION_ENABLED=false

# Resource Monitoring
GPU_MONITORING_ENABLED=true
MEMORY_MONITORING_ENABLED=true
TEMPERATURE_MONITORING_ENABLED=true
UTILIZATION_MONITORING_ENABLED=true

# Resource Limits
MAX_GPU_MEMORY_GB=24
MAX_CPU_CORES=16
MAX_RAM_GB=64

# Fallback Settings
CPU_FALLBACK_ENABLED=true
OFFLOAD_TO_CPU_ENABLED=true
DISK_OFFLOAD_ENABLED=false
