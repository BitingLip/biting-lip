# Storage Configuration
# Storage and filesystem settings

# Local Storage Settings
STORAGE_TYPE=local
STORAGE_ROOT=/app/data
TEMP_DIR=/tmp/bitinglip
CACHE_DIR=/app/cache

# File System Settings
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=.json,.yaml,.txt,.log,.pkl,.pt,.safetensors
FILE_CLEANUP_ENABLED=true
FILE_RETENTION_DAYS=30

# Model Storage Settings
MODEL_STORAGE_TYPE=local
MODEL_CACHE_DIR=/app/models
MODEL_DOWNLOAD_DIR=/app/downloads
MODEL_MAX_SIZE=10GB

# Database Storage Settings
DB_TYPE=sqlite
DB_PATH=/app/data/bitinglip.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24

# Redis Storage Settings (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Cloud Storage Settings (optional)
CLOUD_STORAGE_ENABLED=false
AWS_S3_BUCKET=
AWS_REGION=us-east-1
AZURE_STORAGE_ACCOUNT=
GCP_STORAGE_BUCKET=
